{
    "name": "perfy",
    "version": "1.0.0",
    "description": "The perfect companion for Benchpress Performance Toolkit",
    "main": "index.js",
    "bin": {
        "perfy": "./cli.js"
    },
    "scripts": {
        "pretest": "webdriver-manager update",
        "posttest": "npm run merge",
        "test": "protractor protractor.conf.js",
