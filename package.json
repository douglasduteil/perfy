        "url": "https://github.com/manekinekko/perfy.git"
    },
    "private": false,
    "license": "MIT",
    "dependencies": {
        "@angular/benchpress": "^0.1.0",
        "asyncawait": "1.0.6",
        "fs-extra": "1.0.0",
        "glob": "7.1.1",
        "http-server": "0.9.0",
        "optimist": "^0.6.1",
        "protractor": "4.0.0",
        "socket.io": "1.5.1"
    },
    "devDependencies": {
        "rimraf": "2.5.4"
