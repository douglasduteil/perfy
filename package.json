      "ts-node/register"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "lerna": "^2.0.0-rc.2",
    "npm-run-all": "^4.0.2",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}
