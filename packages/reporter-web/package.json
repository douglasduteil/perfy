{
  "name": "@perfyjs/reporter-web",
  "version": "0.0.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "webpack",
    "build:test": "tsc -p test/tsconfig.json",
    "test": "run-s build:test test:unit",
    "test:unit": "ava --verbose",
    "watch:build:test": "npm run build:test -- -w",
    "watch:test:unit": "npm run test:unit -- -w",
    "start": "npm run serve",
    "serve": "webpack-dev-server",
    "serve:unit": "run-p watch:test:unit watch:build:test"
  },
  "ava": {
    "files": [
      "test/out-tsc/test/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0",
    "awesome-typescript-loader": "^3.1.2",
    "html-webpack-plugin": "^2.28.0",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  }
}
