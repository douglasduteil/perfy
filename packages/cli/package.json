{
  "name": "@perfyjs/cli",
  "version": "0.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "perfy": "bin/perfy.js"
  },
  "scripts": {
    "build:test": "tsc -p test/tsconfig.json",
    "build": "tsc --module commonjs --outDir dist",
    "prepublish": "npm run build",
    "serve:unit": "run-p watch:test:unit watch:build:test",
    "serve": "npm run build -- -w",
    "test:unit": "ava --verbose",
    "test": "run-s build:test test:unit",
    "watch:build": "npm run build -- -w",
    "watch:build:test": "npm run build:test -- -w",
    "watch:test:unit": "npm run test:unit -- -w"
  },
  "dependencies": {
    "@perfyjs/reporter-web": "^0.0.0",
    "connect-history-api-fallback": "^1.3.0",
    "debug": "^2.6.6",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "live-server": "^1.2.0",
    "lodash": "^4.17.4",
    "portscanner": "^2.1.1",
    "serve-static": "^1.12.2",
    "yargs": "^8.0.1"
  },
  "ava": {
    "files": [
      "test/out-tsc/test/**/*.js"
    ]
  },
  "devDependencies": {
    "@perfyjs/core": "^0.0.0",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.12",
    "@types/yargs": "^6.6.0",
    "ava": "^0.19.1",
    "execa": "^0.6.3",
    "jsdom": "^10.1.0",
    "jsdom-global": "^2.1.1",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0"
  }
}
