{
  "name": "@perfyjs/cli",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "bin": {
    "perfy": "bin/perfy.js"
  },
  "scripts": {
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:es2015": "tsc --module es2015 --outDir dist/es2015",
    "build:test": "tsc -p test/tsconfig.json",
    "build": "run-p -l \"build:cjs -- {@}\" \"build:es2015 -- {@}\" --",
    "prepublish": "npm run build",
    "serve:unit": "run-p watch:test:unit watch:build:test",
    "serve": "npm run build -- -w",
    "test:unit": "ava --verbose",
    "test": "run-s build:test test:unit",
    "watch:build": "npm run build -- -w",
    "watch:build:test": "npm run build:test -- -w",
    "watch:test:unit": "npm run test:unit -- -w"
  },
  "dependencies": {
    "yargs": "^7.1.0"
  },
  "ava": {
    "files": [
      "test/out-tsc/test/**/*.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^7.0.12",
    "@types/yargs": "^6.6.0",
    "execa": "^0.6.3",
    "ava": "^0.19.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0"
  }
}
