{
  "name": "@perfyjs/cli",
  "version": "0.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "perfy": "bin/perfy.js"
  },
  "scripts": {
    "build:test": "tsc -p test/tsconfig.json",
    "build": "tsc --module commonjs --outDir dist",
    "lint:src": "tslint \"src/**/*.ts\" --type-check -p tsconfig.json",
    "lint:test": "tslint \"test/unit/**/*.ts\" --type-check -p test/tsconfig.json",
    "lint": "run-p lint:*",
    "prebuild:test": "del test/out-tsc",
    "prebuild": "del dist",
    "serve:test": "run-p watch:test:unit watch:build:test",
    "serve": "npm run build -- -w",
    "test:unit": "ava --verbose --no-cache",
    "test": "run-s lint build:test test:unit",
    "watch:build:test": "npm run build:test -- -w --pretty",
    "watch:test:unit": "npm run test:unit -- -w --pretty"
  },
  "dependencies": {
    "@perfyjs/core": "^0.0.0",
    "@perfyjs/reporter-web": "^0.0.0",
    "connect-history-api-fallback": "^1.3.0",
    "express": "^4.15.3",
    "http-server": "^0.10.0",
    "live-server": "^1.2.0",
    "lodash": "^4.17.4",
    "npmlog": "^4.1.0",
    "portscanner": "^2.1.1",
    "serve-static": "^1.12.3",
    "yargs": "^8.0.2"
  },
  "ava": {
    "files": [
      "test/out-tsc/test/**/*.js"
    ]
  },
  "devDependencies": {
    "@types/execa": "^0.6.0",
    "@types/express": "^4.0.36",
    "@types/lodash": "^4.14.66",
    "@types/node": "7.0.28",
    "@types/npmlog": "file:../@types/npmlog",
    "@types/portscanner": "file:../@types/portscanner",
    "@types/sinon": "^2.3.1",
    "@types/yargs": "^6.6.0",
    "ava": "^0.19.1",
    "del-cli": "^1.0.0",
    "execa": "^0.7.0",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "sinon": "^2.3.4",
    "tslint": "^5.4.3",
    "typescript": "^2.3.4"
  }
}
