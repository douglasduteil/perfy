    "@types/pify": "0.0.28",
    "ava": "^0.19.1",
    "jsdom": "^9.12.0",
    "jsdom-global": "^2.1.1",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0"
  },
  "dependencies": {
    "debug": "^2.6.6",
    "glob": "^7.1.1",
    "lodash": "^4.17.4",
