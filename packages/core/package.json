{
  "name": "@perfyjs/core",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build:test": "tsc -p test/tsconfig.json",
    "build": "tsc --module commonjs --outDir dist",
    "lint:src": "tslint \"src/**/*.ts\" --type-check -p tsconfig.json",
    "lint:test": "tslint \"test/unit/**/*.ts\" --type-check -p test/tsconfig.json",
    "lint": "run-p lint:*",
    "prebuild:test": "del test/out-tsc",
    "prebuild": "del dist",
    "prepublish": "npm run build",
    "serve:test": "run-p watch:test:unit watch:build:test",
    "serve": "npm run build -- -w",
    "test:unit": "ava --verbose",
    "test": "run-s lint build:test test:unit",
    "watch:build:test": "npm run build:test -- -w",
    "watch:test:unit": "npm run test:unit -- -w"
  },
  "ava": {
    "files": [
      "test/out-tsc/test/**/*.js"
    ]
  },
  "dependencies": {
    "debug": "^2.6.6",
    "glob": "^7.1.1",
    "lodash": "^4.17.4",
    "lowdb": "^0.16.2",
    "param-case": "^2.1.1",
    "pify": "^3.0.0",
    "sentence-case": "^2.1.1",
    "tcomb": "^3.2.20"
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.63",
    "@types/lowdb": "^0.15.0",
    "@types/pify": "0.0.28",
    "ava": "^0.19.1",
    "del-cli": "^1.0.0",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.0"
  }
}
